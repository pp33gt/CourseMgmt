<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LexiconLMS</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute"
              crossorigin="anonymous"
              integrity="sha256-eSi1q2PG6J7g7ib17yAaWMcrr5GrtohYChqibrV7PBE=" />
    </environment>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Style.css" />
</head>
    <body>
        <div class="video-bg">
            <video loop muted autoplay poster="~/images/videoposter.jpg">

                    <source src="~/images/Pexels%20Videos%202769.mp4" type="video/mp4"/>

            </video>
        </div>
      
       
     <div class="bg">
                @*<div class="row">
                    <div class="col-md-12">*@
                        @*<div class="row">
                            <div class="col-md-12">
                            <img class="loginLogo" src="~/images/Lexicon_webblogo.png" /></div>
                        </div>*@


                        <div class="row">
                            <div class="col-md-12">
                                <form asp-action="Index" class="loginForm">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group"><img class="loginLogo" src="~/images/Lexicon_webblogo.png" /></div>
                                    <div class="form-group">
                                        @*<label asp-for="Email" class="control-label"></label>*@
                                        <input asp-for="Email" class="form-control" placeholder="Email"/>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        @*<label asp-for="Password" class="control-label"></label>*@
                                        <input asp-for="Password" class="form-control" placeholder="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    
                                        <input asp-for="RememberMe" type="checkbox" class="form-check-input"/>
                                        <label>Keep me logged in</label>
                              

                                        <div class="form-group">
                                            <input type="submit" value="Log In" class="loginButton" />
                                        </div>
                                </form>
                            </div>
                        </div>


                    </div>
                @*</div>
            </div>*@

</body>
</html>
