@model LexiconLMS.ViewModels.ModuleAddViewModel

@{
    ViewData["Title"] = "Create Module";
}

<div>
    <partial name="_ModuleBreadCrumbPartial" />
</div>
<hr />
<h5>Create Module:</h5>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="CourseId" class="form-control" />
            <input type="hidden" asp-for="ParentStartDate" class="form-control" />
            <input type="hidden" asp-for="ParentEndDate" class="form-control" />

            <div class="form-group">
                <a class="btn btn-purple" asp-controller="Course" asp-action="Details" asp-route-id="@Model.CourseId">Back to Course</a>
                <input type="submit" value="Create" class="btn btn-green" />
                <a asp-action="Details" asp-controller="Course" class="btn btn-grey" asp-route-id="@Model.CourseId">Cancel</a>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
